<?xml version='1.0' encoding='utf-8'?>
<widget id="com.esfera.game" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Esfera</name>
    <description>
        Esfera de la suerte. Agite su despositivo para ver una frase.
    </description>
    <author href="https://twitter.com/nytio">
        Mario Hernandez M.
    </author>
    <content src="index.html" />
	<plugin name="cordova-plugin-insomnia" spec="4.3.0" />
	<plugin name="cordova-plugin-whitelist" spec="1.3.1" />
    <plugin name="cordova-plugin-device-motion" spec="1.2.3" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<icon src="www/img/blue.png" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
